<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Category 1 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Health accident"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <!-- Subheading 1.1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <!-- Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/unconsciousness"/>

        <!-- Subheading Text -->
        <TextView
            android:id="@+id/unconsciousness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unconsciousness"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Subheading 1.2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <!-- Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/injury"/>

        <!-- Subheading Text -->
        <TextView
            android:id="@+id/injury"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Injury"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Subheading 1.3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <!-- Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/terrorist"/>

        <!-- Subheading Text -->
        <TextView
            android:id="@+id/choking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choking"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Category 2 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Domestic accident"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="4dp"/>

    <!-- Line Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <!-- Subheading 2.1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <!-- Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/fire"/>

        <!-- Subheading Text -->
        <TextView
            android:id="@+id/fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fire"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Subheading 2.2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <!-- Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/electric"/>

        <!-- Subheading Text -->
        <TextView
            android:id="@+id/electric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electrical"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp"/>

    </LinearLayout>


    <!-- Category 3 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criminality"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <!-- Subheading 1.1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <!-- Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/assault"/>

        <!-- Subheading Text -->
        <TextView
            android:id="@+id/assault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assault"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Subheading 1.2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <!-- Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/terroristt"/>

        <!-- Subheading Text -->
        <TextView
            android:id="@+id/terrorist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terorist attack"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Category 4 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Natural disaster"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Earthquake -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <!-- Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/earthquake"/>

        <!-- Subheading Text -->
        <TextView
            android:id="@+id/earthquake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Earthquake"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <!-- Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/tsunami"/>

        <!-- Subheading Text -->
        <TextView
            android:id="@+id/tsunami"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tsunami"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</LinearLayout>
