<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:fillViewport="true"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Secure Section -->
        <LinearLayout
            android:id="@+id/secureSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/secure" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Secure"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#000000" />

            <!-- Content for Secure section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Immediately move to higher ground: If you are in a coastal area and receive an official tsunami warning or observe signs of an impending tsunami, evacuate to higher ground immediately. Head inland or to an elevated location outside the tsunami zone."
                android:textColor="#000000" />

        </LinearLayout>

        <!-- Alert Section -->
        <LinearLayout
            android:id="@+id/alertSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/secureSection"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/alert" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Alert"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#000000" />

            <!-- Content for Alert section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Do not wait for confirmation: Even if you haven't received an official warning but observe strong and prolonged ground shaking or the ocean receding rapidly, it may indicate an approaching tsunami. In such cases, move to higher ground without delay"
                android:textColor="#000000" />

        </LinearLayout>

        <!-- Act Section -->
        <LinearLayout
            android:id="@+id/actSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/alertSection"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/act" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Act"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#000000" />

            <!-- List of numbered instructions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Instruction 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:text="1. Avoid coastal areas: Stay away from beaches, harbors, and coastal low-lying areas. Tsunamis can cause rapid and powerful surges of water that can flood these areas."
                        android:textColor="#000000" />


                </LinearLayout>

                <!-- Instruction 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:text="2. Do not return to coastal areas until authorities declare it safe: Wait for official clearance and instructions before returning to coastal areas. Tsunamis can occur in multiple waves, so it's important to wait for the all-clear signal from authorities."
                        android:textColor="#000000" />


                </LinearLayout>

                <!-- Instruction 4  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:text="3. Stay informed: Use battery-powered radios, emergency apps, or other reliable sources to stay updated on the situation and any potential risks or warnings"
                        android:textColor="#000000" />


                </LinearLayout>

                <!-- Instruction 5  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:text="4. Help others if possible: If you can assist others, especially those who may need assistance due to age, disability, or other factors, do so without compromising your own safety. However, prioritize your own evacuation first."
                        android:textColor="#000000" />


                </LinearLayout>

                <!-- Instruction 3  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:text="5. Be prepared for aftershocks: After the initial earthquake that triggers the tsunami, aftershocks may occur. Be prepared for these and take appropriate safety measures"
                        android:textColor="#000000" />
                </LinearLayout>
                <!-- Instruction 3  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="50dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:text="6. Follow instructions from local authorities: Adhere to the guidance and instructions provided by local authorities, emergency services, and law enforcement. They have the most up-to-date information and will provide guidance for your safety"
                        android:textColor="#000000" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <!-- Return Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/return_button"
            android:layout_marginBottom="10dp"
            android:text="Return" />

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>